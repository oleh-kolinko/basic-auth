<h1>Welcome to basic authorization</h1>

<ul>
  <% if (loggedUser) { %>

    <h2>Hello, <%= loggedUser.username %></h2>
    <li><a href="/secret">Secret logged-in only page</a></li>
    <li><a href="/logout">Log Out</a></li>

  <% } else { %>

  <li><a href="/signup">Sign up</a></li>
  <li><a href="/login">Login</a></li>

  <% } %>
</ul>
